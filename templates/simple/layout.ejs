<!DOCTYPE html>
<html lang="ca">

    <head>
        <% include head %>
    </head>

    <body ng-app="iaqse">
        <div style="max-width: 1500px; margin: auto;">
        <header>
            <% include header %>
        </header>

        <div id="main-wrap" class="container-fluid" ng-controller="mainController">
            <div class="row">
                <div class="col-xl-2 d-none d-xl-block">
                    <div class="alert alert-primary">
                        <h6><i class="fa fa-compass"></i> Navegació</h6>
                    </div>

                    <ul id="tree1">
                        <% routes.pages.filter(e=>!e.hiden).forEach( page => { if(!page.hide){ %>
                        <li><a href="<%=page.url%>.html"><%=page.title%></a>
                            <% if(page.views && page.views.length) {  %>
                            <ul>
                                <% page.views.forEach( view => { %>
                                <li><a href="<%=page.url%>.html#!/<%=view.url%>"><%=view.title%></a>
                                    <% if(view.views && view.views.length) { %>
                                    <ul>
                                        <% view.views.forEach( view2 => { %>
                                        <li><a href="<%=page.url%>.html#!/<%=view2.url%>"><%=view2.title%></a>
                                            <% }) %>
                                    </ul>
                                    <% } %>
                                </li>
                                <%   }) %>
                            </ul>
                            <% } %>
                        </li>
                        <% } }) %>
                    </ul>

                    <% if(config.remoteURL) { %>
                    <br><br>
                    <div class="alert alert-primary">
                            <h6><i class="fa fa-cogs"></i> Administració</h6>
                    </div>
                    <login-widget></login-widget>
                    <% } %>
                </div>

                <div class="col-xl-10 col-lg-12">
                <main>
                </main>
                </div>
            </div>
                <% include footer %>
            </div>
            
        </div>

</body>

</html>