<center>    
<div class="container-fluid">
       
        <div class="row">
                <% page.views[0].views.forEach( (view)=>{ %>      
        
            <div class="col-sm-6 col-lg-3">
                    <a href="#!<%=view.url%>">
            <div class="card card-menu">
                    <% if(view.img) { %>
                        <img class="card-img-top" src="../<%=view.img%>" style="width:100px"/>
                        <% } %> 
                <div class="card-body">
                    <h5 class="card-title"><b><%=view.title%></b></h5>                    
                </div>
            </div>
        </a>
            </div>
       
        <% }) %>
    </div> 
</div>
</center>
